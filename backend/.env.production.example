# ===========================================
# Qodex Backend Production Environment Variables
# ===========================================
# Set these in your Render dashboard under Environment settings

# Supabase Database Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# AI Provider API Keys
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
MISTRAL_API_KEY=your-mistral-key
COHERE_API_KEY=your-cohere-key

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-key
PINECONE_HOST=https://your-index.pinecone.io
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=qodex-documents

# Application Configuration
# Set this to your Render frontend URL after deployment
CORS_ORIGINS=https://qodex-frontend.onrender.com
DEBUG=false
LOG_LEVEL=INFO

# Optional: Default AI Models
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_MODEL=claude-3-sonnet-20240229
MISTRAL_MODEL=mistral-large-latest
COHERE_MODEL=command-r7b-12-2024
